<!-- index.ejs (Main product page) -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paypal with NestJs</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; padding: 50px; }
        .container { max-width: 400px; margin: auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); }
        button { background-color: #0070ba; color: white; border: none; padding: 10px 20px; font-size: 16px; cursor: pointer; border-radius: 5px; }
        button:hover { background-color: #005ea6; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Product Name: Happiness</h1>
        <h2>Price: $100 (Limited Time Offer!)</h2>
        <form action="/payment" method="post">
            <input type="hidden" name="amount" value="100">
            <button type="submit">Pay Now</button>
        </form>
    </div>
</body>
</html>